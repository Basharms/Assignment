	public static double approximatePI(int number) {
		
		System.out.println(Math.pow(-1,2+1));
		
		double pi = 0;
		double nn = 0;
		double nnn = 0;
		for(double i = 1; i < number; i++) {
			nn += 1 / (2 * i - 1) + Math.pow(-1,i+1) / (2*i - 1);
			
			
		}
		nnn = 1 - nn;
		pi = 4 * nnn;
		return pi ;
		
//		double pi = 0;
//		for (int i = 1; i < number; i++) {
//			pi += Math.pow(-1,i+1) / (2*i - 1);
//		} 
//		return 4 * pi;
    }
	
