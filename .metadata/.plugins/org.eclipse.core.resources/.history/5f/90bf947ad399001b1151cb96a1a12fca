	public static double approximatePI(int number) {
		
//		double pi = 0;
//		for(double i = 2; i < number; i++) {
//			pi += 1 - (1 / (2 * i - 1));
//		}
//		
//		return pi;
		
		double pi = 0;
		for (int i = 1; i < number; i++) {
			pi += Math.pow(-1,i+1) / (2*i - 1);
		} 
		return 4 * pi;
    }
	
