	public static double approximatePI(int number) {
		
		double result = 0;
		for(double i = 0; i < number; i++) {
			result += (-1 / (2 * i -1)); 
//			if(i % 2 == 0) {
//				result += -1 / (2 * i -1); 
//			} else {
//				result += -1 / (2 * i -1); 
//			}
		}
		
		return result;
    }
	
