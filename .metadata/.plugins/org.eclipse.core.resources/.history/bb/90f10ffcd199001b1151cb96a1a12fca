	}
	
	public static double approximatePI(int number) {
		
		double pi = 0;
		for(double i = 0; i < number; i++) {
			pi += Math.pow(-1, i + 1) / ( 2 * i - 1);
			if(i == 1) {
				pi *= 4;
			}
		}
		
		return pi;
    }
	
